<idea-plugin>
    <id>com.flydb.flydb-plug</id>

    <name>FlyDB</name>

    <vendor email="582626764@qq.com" url="https://www.flydb.com">FlyDB</vendor>

    <!-- 插件的描述，在插件发布后会在插件首页显示 -->
    <description>
        FlyDB 是一个数据库版本管理工具, 支持数据库文件版本管理，相当于Flyway liquibase 更方便快捷
    </description>

    <!-- 插件的依赖配置， 任何插件都应该配置platform， 才可以使用一些基本的功能 -->
    <depends>com.intellij.modules.platform</depends>

    <!--插件扩展点配置， 后面我们的一些扩展会在这里配置 -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="httpRunner" factoryClass="com.dadada.plugin.httprunner.HttpRunnerToolWindowFactory"  anchor="bottom"/>
    </extensions>

    <!-- 插件的兼容版本，这里使用的是build number -->
    <idea-version since-build="203" until-build="232.*"/>
</idea-plugin>